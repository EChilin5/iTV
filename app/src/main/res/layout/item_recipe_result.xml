<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_food"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/RecipeItemGL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/RecipeItemGLv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/RecipeItemGLvEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="1.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rvRecipe_furtherDetail"
        android:layout_width="0dp"
        android:layout_height="152dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dp"
        android:background="@drawable/custombackground"
        android:elevation="4dp"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/RecipeItemGLvEnd"
        app:layout_constraintStart_toStartOf="@id/RecipeItemGLv1"
        app:layout_constraintTop_toTopOf="@id/RecipeItemGL1">


        <ImageView
            android:id="@+id/ivRecipeFoodImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/sample_food_image"
            app:layout_constraintBottom_toTopOf="@+id/RecipeFurtherDetailGLEnd"
            app:layout_constraintEnd_toStartOf="@+id/RecipeFurtherGuideLineV2"
            app:layout_constraintStart_toStartOf="@+id/RecipeFurtherGuideLineV1"
            app:layout_constraintTop_toTopOf="@id/RecipeFurterDetailGL1"
            app:srcCompat="@drawable/bacground_myfood"
            tools:srcCompat="@tools:sample/avatars" />


        <TextView
            android:id="@+id/tvRecipeFoodName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/salad"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/RecipeFurtherDetailGl2"
            app:layout_constraintEnd_toEndOf="@id/RecipeFurtherGLVEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/RecipeFurtherGuideLineV3"
            app:layout_constraintTop_toTopOf="@id/RecipeFurterDetailGL1"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvRecipeTotalCCalories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/calories"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/RecipeFurtherGuideLinev4"
            app:layout_constraintStart_toStartOf="@+id/RecipeFurtherGuideLineV3"
            app:layout_constraintTop_toTopOf="@+id/RecipeFurtherDetailGl2" />

        <View
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/item_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.031"
            app:layout_constraintStart_toStartOf="@+id/RecipeFurtherGuideLineV2"
            app:layout_constraintTop_toTopOf="@+id/RecipeFurterDetailGL1"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tvRecipeCalorieCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/_1000"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/RecipeFurtherGLVEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/RecipeFurtherGuideLinev4"
            app:layout_constraintTop_toTopOf="@+id/RecipeFurtherDetailGl2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/RecipeFurterDetailGL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/RecipeFurtherDetailGl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0.55" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/RecipeFurtherDetailGLEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="1.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/RecipeFurtherGuideLineV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/RecipeFurtherGuideLineV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="137dp"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/RecipeFurtherGuideLineV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0.44" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/RecipeFurtherGuideLinev4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0.70" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/RecipeFurtherGLVEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="1.0" />

        <TextView
            android:id="@+id/tvRecipeTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Time"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/RecipeFurtherGuideLinev4"
            app:layout_constraintStart_toStartOf="@+id/RecipeFurtherGuideLineV3"
            app:layout_constraintTop_toBottomOf="@+id/tvRecipeTotalCCalories" />

        <TextView
            android:id="@+id/tvRecipeTimeAmt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="100"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/RecipeFurtherDetailGLEnd"
            app:layout_constraintEnd_toStartOf="@+id/RecipeFurtherGLVEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/RecipeFurtherGuideLinev4"
            app:layout_constraintTop_toBottomOf="@+id/tvRecipeCalorieCount"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>