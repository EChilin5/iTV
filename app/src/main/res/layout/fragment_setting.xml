<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DailyMealFragment">

    <RelativeLayout
        android:id="@+id/rv_header"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:background="@drawable/bacground_myfood">

        <TextView
            android:id="@+id/tvCurrentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="130dp"
            android:text="@string/sample_date"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvTotalCalorieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCurrentDate"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="17dp"
            android:text="@string/current_calorie_count"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvRemainingCalorieCountTitle"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTotalCalorieTitle"
            android:layout_alignBottom="@+id/tvTotalCalorieTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-18dp"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="1dp"
            android:layout_toEndOf="@+id/tvTotalCalorieTitle"
            android:text="@string/remaining_calorie_count"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvTotalCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTotalCalorieTitle"
            android:layout_alignParentStart="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:text="@string/_3000"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvRemaingCalorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRemainingCalorieCountTitle"
            android:layout_alignBottom="@+id/tvTotalCalories"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="0dp"
            android:text="@string/_1000"

            android:textColor="@color/white"
            android:textSize="24sp" />


    </RelativeLayout>


    <TextView
        android:id="@+id/tvFoodLogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rvDailyFood"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/today_s_food_log_title"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDailyFood"
            android:layout_width="wrap_content"
            android:layout_height="407dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="0dp"
            android:padding="8dp"
            tools:listitem="@layout/user_food_item" />


</RelativeLayout>

