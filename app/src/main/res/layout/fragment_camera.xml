<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragment.CameraFragment">


    <ImageView
        android:id="@+id/ivImageText"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:contentDescription="@string/sample_image"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImageText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="121dp"
        android:text="@string/capture" />

    <TextView
        android:id="@+id/tvImageText"
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:layout_below="@+id/btnCapture"
        android:layout_marginTop="31dp"
        android:text="TextView" />

</RelativeLayout>

