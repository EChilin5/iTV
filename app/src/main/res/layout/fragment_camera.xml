<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragment.CameraFragment">


    <ImageView
        android:id="@+id/ivImageText"
        android:layout_width="377dp"
        android:layout_height="235dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="77dp"
        android:contentDescription="@string/sample_image"
        app:srcCompat="@drawable/camera_icon_background"
        tools:src="@drawable/camera_icon_background" />

    <Button
        android:id="@+id/btnCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImageText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="56dp"
        android:text="@string/capture" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImageText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="79dp"
        android:layout_toStartOf="@+id/btnCapture"
        android:text="@string/save" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="@string/take_image"
        android:textColor="@color/black"
        android:textSize="24sp" />

</RelativeLayout>

